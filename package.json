{
  "name": "eccomerce-api",
  "version": "1.0.0",
  "description": "Eccomerce API built with Fastify and Clean Architecture principles",
  "main": "index.js",
  "repository": "https://github.com/sebasBetancourt/Eccomerce",
  "author": "Sebasti√°n Betancourt",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@fastify/jwt": "10",
    "@prisma/client": "^7.1.0",
    "bcryptjs": "^3.0.3",
    "bluebird": "^3.7.2",
    "config-yaml": "^1.1.6",
    "fastify": "5",
    "fastify-cors": "^6.0.2",
    "fastify-plugin": "^3.0.0",
    "joi": "^17.5.0",
    "pg-promise": "^10.11.1",
    "pino-pretty": "^7.3.0",
    "pnpm": "^10.24.0",
    "prisma": "^7.1.0"
  },
  "scripts": {
    "build": "swc src -d dist",
    "build-dev": "pnpm run build && NODE_ENV=development node --inspect dist/src/server.js",
    "dev": "nodemon --ext ts --exec \"npm run build-dev\"",
    "start": "npm run build && NODE_ENV=production node dist/server.js",
    "eslint:check": "eslint src/**/*.ts",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "prettier:check": "prettier --check 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "prepare": "husky install",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@types/bcrypt": "^5.0.0",
    "@types/config-yaml": "^1.1.1",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.0.2",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^30.2.0",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,yml,yaml}": [
      "pnpm eslint:check",
      "pnpm eslint:fix",
      "pnpm prettier:check",
      "pnpm prettier:fix"
    ],
    "*.{js,jsx,ts,tsx,css,md}": "pnpm prettier:fix"
  }

}
